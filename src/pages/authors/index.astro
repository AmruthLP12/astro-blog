---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection,getEntry } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Card from "@/components/starwind/card/Card.astro";
import CardContent from "@/components/starwind/card/CardContent.astro";
import Button from "@/components/starwind/button/Button.astro";
import { Image } from "astro:assets";

// Get all authors and their posts
const allAuthors = await getCollection("authors");
const allPosts = await getCollection("blog");

// Calculate stats for each author
// Calculate stats for each author
const authorsWithStats = await Promise.all(
  allAuthors.map(async (author) => {
    const authorPosts: CollectionEntry<"blog">[] = [];

    for (const post of allPosts) {
      if (!post.data.author) continue;

      const resolvedAuthor = await getEntry(post.data.author);

      if (resolvedAuthor?.id === author.id) {
        authorPosts.push(post);
      }
    }

    // Calculate total words
    const totalWords = authorPosts.reduce((sum, post) => {
      if (!post.body) return sum;
      const wordCount = post.body.trim().split(/\s+/).filter(Boolean).length;
      return sum + wordCount;
    }, 0);

    // Get unique categories
    const categories = [
      ...new Set(authorPosts.map((p) => p.data.category).filter(Boolean)),
    ];

    // Get latest post date
    const latestPostDate =
      authorPosts.length > 0
        ? new Date(
            Math.max(
              ...authorPosts.map((p) =>
                (p.data.updatedDate || p.data.pubDate).getTime()
              )
            )
          )
        : null;

    return {
      ...author,
      stats: {
        postCount: authorPosts.length,
        totalWords,
        categories: categories.length,
        latestPostDate,
      },
    };
  })
);

// Sort authors by post count (most active first)
const sortedAuthors = authorsWithStats.sort(
  (a, b) => b.stats.postCount - a.stats.postCount
);

// Separate active and inactive authors
const activeAuthors = sortedAuthors.filter((a) => a.stats.postCount > 0);
const inactiveAuthors = sortedAuthors.filter((a) => a.stats.postCount === 0);

// Helper function to format dates
const formatDateShort = (date: Date | null) => {
  if (!date) return "N/A";
  return date.toLocaleDateString("en-US", {
    month: "short",
    year: "numeric",
  });
};

// Get author's extended bio
const getExtendedBio = (author: CollectionEntry<"authors">) => {
  return author.body?.trim() || null;
};
---


                        {author.data.github && (
                          <a
                            href={author.data.github}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="p-2 rounded-md hover:bg-muted transition-colors focus:outline-none focus:ring-2 focus:ring-primary"
                            aria-label={`View ${author.data.name}'s GitHub`}

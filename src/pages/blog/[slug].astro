          <p
            class="text-xl md:text-2xl text-muted-foreground leading-relaxed max-w-4xl"
          >
            {post.data.description}
          </p>

          <!-- Author Card (Enhanced) -->
          {
            author && (
              <div class="flex items-start gap-4 p-6 rounded-xl bg-muted/30 border border-border/50 backdrop-blur-sm">
                <a
                  href={`/author/${author.slug}`}
                  class="shrink-0 group focus:outline-none focus:ring-2 focus:ring-primary rounded-full"
                  aria-label={`View profile of ${author.data.name}`}

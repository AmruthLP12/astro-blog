                  <div class="flex items-start justify-between gap-4 flex-wrap">
                    <div class="min-w-0">
                      <a
                        href={`/author/${author.slug}`}
                        class="font-semibold text-foreground hover:text-primary transition-colors focus:outline-none focus:underline"
                      >
                        {author.data.name}

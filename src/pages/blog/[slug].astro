---
export const prerender = true;
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection, getEntry } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Button from "@/components/starwind/button/Button.astro";
import Card from "@/components/starwind/card/Card.astro";
import CardContent from "@/components/starwind/card/CardContent.astro";
import Prose from "@/components/Prose.astro";
import XIcon from "@/components/icons/XIcon.astro";
import LinkedInIcon from "@/components/icons/LinkedInIcon.astro";
import { Image } from "astro:assets";

// Get all posts and authors
const allPosts = await getCollection("blog");
const allAuthors = await getCollection("authors");

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  return Promise.all(
    posts.map(async (post) => {
      const author = post.data.author
        ? await getEntry(post.data.author)
        : null;

      return {
        params: { slug: post.slug },
        props: { post, author },
      };
    })
  );
}


const { post, author } = Astro.props as {
  post: CollectionEntry<"blog">;
  author: CollectionEntry<"authors"> | null;
};

// Render markdown
const { Content } = await post.render();

// Filter out the current post and get related articles
// Prioritize same category, then same tags, then most recent
const otherPosts = allPosts
  .filter((p) => p.slug !== post.slug)
  .map((p) => {
    let relevanceScore = 0;

    // Same category = +10
    if (post.data.category && p.data.category === post.data.category) {
      relevanceScore += 10;
    }

    // Shared tags = +2 per tag
    if (post.data.tags && p.data.tags) {
      const sharedTags = post.data.tags.filter((tag) =>
        p.data.tags?.includes(tag),
      );
      relevanceScore += sharedTags.length * 2;
    }

    // Same author = +5
    if (author && p.data.author === post.data.author) {
      relevanceScore += 5;
    }

    return { post: p, score: relevanceScore };
  })
  .sort((a, b) => {
    // First by relevance, then by date
    if (b.score !== a.score) return b.score - a.score;
    return b.post.data.pubDate.getTime() - a.post.data.pubDate.getTime();
  })
  .slice(0, 3)
  .map((item) => item.post);

// Get more posts from the same author
const authorPosts = author
  ? allPosts
      .filter((p) => p.slug !== post.slug && p.data.author === post.data.author)
      .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
      .slice(0, 3)
  : [];

// Calculate reading time with better accuracy
const wordsPerMinute = 200;
const textContent = post.body || "";
const wordCount = textContent.trim().split(/\s+/).filter(Boolean).length;
const readingTime = Math.ceil(wordCount / wordsPerMinute);

// Helper functions for dates
const formatDate = (date: Date) => {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};

const formatDateShort = (date: Date) => {
  return date.toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
    year: "numeric",
  });
};

const formatDateISO = (date: Date) => {
  return date.toISOString();
};

// Generate structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: post.data.title,
  description: post.data.description,
  image: post.data.heroImageLight ? post.data.heroImageLight.src : undefined,
  datePublished: formatDateISO(post.data.pubDate),
  dateModified: post.data.updatedDate
    ? formatDateISO(post.data.updatedDate)
    : formatDateISO(post.data.pubDate),
  author: author
    ? {
        "@type": "Person",
        name: author.data.name,
        url: author.data.website || `${Astro.site}author/${author.slug}`,
      }
    : undefined,
  publisher: {
    "@type": "Organization",
    name: "Your Site Name", // Replace with your site name
    logo: {
      "@type": "ImageObject",
      url: `${Astro.site}logo.png`, // Replace with your logo URL
    },
  },
  mainEntityOfPage: {
    "@type": "WebPage",
    "@id": Astro.url.href,
  },
};
---

<BaseLayout title={post.data.title}>
  <!-- Structured Data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify(structuredData)}
  />

  <main class="min-h-screen">
    <!-- Hero Section with Gradient Background -->
    <div
      class="relative bg-linear-to-br from-background via-background to-muted/20"
    >
      <div class="max-w-6xl mx-auto px-6 py-16 md:py-24">
        <!-- Breadcrumb Navigation -->
        <nav
          class="mb-8 flex items-center gap-2 text-sm text-muted-foreground"
          aria-label="Breadcrumb"
        >
          <a
            href="/"
            class="hover:text-foreground transition-colors focus:outline-none focus:underline"
            >Home</a
          >
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
          <a
            href="/blog"
            class="hover:text-foreground transition-colors focus:outline-none focus:underline"
            >Blog</a
          >
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
          <span
            class="text-foreground font-medium truncate max-w-xs md:max-w-md"
            >{post.data.title}</span
          >
        </nav>

        <!-- Category Badge -->
        {
          post.data.category && (
            <div class="mb-6">
              <a
                href={`/blog/category/${post.data.category.toLowerCase()}/`}
                class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium rounded-full bg-primary/10 text-primary border border-primary/20 hover:bg-primary/20 transition-colors focus:outline-none focus:ring-2 focus:ring-primary/50"
              >

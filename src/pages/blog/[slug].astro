---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import Button from "@/components/starwind/button/Button.astro";
import Card from "@/components/starwind/card/Card.astro";
import CardContent from "@/components/starwind/card/CardContent.astro";
import Prose from "@/components/Prose.astro";
import { Image } from "astro:assets";
import XIcon from "@/components/icons/XIcon.astro";
import LinkedInIcon from "@/components/icons/LinkedInIcon.astro";

// Get all posts for "Other Articles"
const allPosts = await getCollection("blog");

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;

// Render markdown
const { Content } = await post.render();

// Filter out the current post and get 3 related articles
const otherPosts = allPosts
  .filter((p) => p.slug !== post.slug)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);

// Calculate reading time (rough estimate: 200 words per minute)
const wordsPerMinute = 200;
const textContent = post.body || "";
const wordCount = textContent.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / wordsPerMinute);
---

<BaseLayout title={post.data.title}>
  <main class="min-h-screen">
    <!-- Hero Section with Gradient Background -->
    <div class="relative bg-linear-to-br from-background via-background to-muted/20">
      <div class="max-w-4xl mx-auto px-6 py-16 md:py-24">
        <!-- Breadcrumb Navigation -->
        <nav class="mb-8 flex items-center gap-2 text-sm text-muted-foreground">
          <a href="/" class="hover:text-foreground transition-colors">Home</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <a href="/blog" class="hover:text-foreground transition-colors">Blog</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-foreground font-medium truncate max-w-50">{post.data.title}</span>
        </nav>

        <!-- Category Badge -->
        {post.data.category && (
          <div class="mb-6">
            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium rounded-full bg-primary/10 text-primary border border-primary/20">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              {post.data.category}
            </span>
          </div>
        )}

        <!-- Post Header -->
        <header class="space-y-6">
          <h1 class="text-4xl md:text-6xl font-bold leading-tight bg-linear-to-br from-foreground to-foreground/70 bg-clip-text text-transparent">
            {post.data.title}
          </h1>
          
          <p class="text-xl md:text-2xl text-muted-foreground leading-relaxed">
            {post.data.description}
          </p>

          <!-- Meta Information -->
          <div class="flex flex-wrap items-center gap-6 text-sm text-muted-foreground pt-4">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <time>
                {post.data.pubDate.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </time>
            </div>

            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              <span>{readingTime} min read</span>
            </div>
          </div>
        </header>

        <!-- Tags -->
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 pt-6">
            {post.data.tags.map((tag) => (
              <span class="inline-flex items-center gap-1 px-3 py-1 text-xs font-medium rounded-md bg-muted/50 text-muted-foreground hover:bg-muted transition-colors cursor-pointer border border-border/50">
                <span class="text-primary">#</span>{tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>

    <!-- Hero Images -->
    <div class="max-w-4xl mx-auto px-6 -mt-8 mb-16">
      {post.data.heroImageLight && (
        <div class="relative rounded-2xl overflow-hidden shadow-2xl border border-border/50 block dark:hidden">
          <Image
            src={post.data.heroImageLight}
            alt={post.data.title}
            width={1200}
            height={630}
            class="w-full h-auto"
            loading="eager"
          />
          <div class="absolute inset-0 ring-1 ring-inset ring-black/10 rounded-2xl"></div>
        </div>
      )}

      {post.data.heroImageDark && (
        <div class="relative rounded-2xl overflow-hidden shadow-2xl border border-border/50 hidden dark:block">
          <Image
            src={post.data.heroImageDark}
            alt={post.data.title}
            width={1200}
            height={630}
            class="w-full h-auto"
            loading="eager"
          />
          <div class="absolute inset-0 ring-1 ring-inset ring-white/10 rounded-2xl"></div>
        </div>
      )}
    </div>

    <!-- Article Content -->
    <article class="max-w-3xl mx-auto px-6 pb-24">
      <!-- Table of Contents (Optional - can be generated from headings) -->
      <aside class="mb-12 p-6 rounded-xl bg-muted/30 border border-border/50">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-muted-foreground mb-3 flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          In This Article
        </h2>
        <p class="text-sm text-muted-foreground">
          Scroll down to explore the full content of this post.
        </p>
      </aside>

      <!-- Main Content with Enhanced Typography -->
      <div class="prose-wrapper">
        <Prose>
          <Content />
        </Prose>
      </div>

      <!-- Article Footer -->
      <footer class="mt-16 pt-8 border-t border-border">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <div class="flex items-center gap-4">
            <Button href="/blog" variant="ghost" size="sm" class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back to Blog
            </Button>
          </div>

          <!-- Share Buttons -->
          <div class="flex items-center gap-2">
            <span class="text-sm text-muted-foreground mr-2">Share:</span>
            <Button 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              variant="ghost" 
              size="sm"
              class="w-9 h-9 p-0 flex items-center justify-center"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Share on Twitter"
            >
              <XIcon />
            </Button>
            <Button 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              variant="ghost" 
              size="sm"
              class="w-9 h-9 p-0 flex items-center justify-center"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Share on LinkedIn"
            >
              <LinkedInIcon />
            </Button>
          </div>
        </div>
      </footer>
    </article>

    <!-- Related Articles Section -->
    {otherPosts.length > 0 && (
      <section class="bg-muted/20 py-24">
        <div class="max-w-6xl mx-auto px-6">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">Continue Reading</h2>
            <p class="text-muted-foreground">Explore more articles you might find interesting</p>
          </div>

          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {otherPosts.map((p) => (
              <Card class="hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 group overflow-hidden border-2 border-transparent hover:border-primary/20">
                <CardContent class="h-full flex flex-col space-y-4 p-6">
                  {/* Category Badge */}
                  {p.data.category && (
                    <span class="inline-flex self-start items-center px-2 py-1 text-xs font-medium rounded-md bg-primary/10 text-primary">
                      {p.data.category}
                    </span>
                  )}

                  {/* Title */}
                  <h3 class="text-xl font-bold leading-tight group-hover:text-primary transition-colors line-clamp-2">
                    {p.data.title}
                  </h3>

                  {/* Description */}
                  <p class="text-muted-foreground text-sm line-clamp-3 flex-1">
                    {p.data.description}
                  </p>

                  {/* Meta & CTA */}
                  <div class="pt-4 border-t border-border space-y-4">
                    <time class="block text-xs text-muted-foreground">
                      {p.data.pubDate.toLocaleDateString("en-US", {
                        month: "short",
                        day: "numeric",
                        year: "numeric",
                      })}
                    </time>

                    <Button
                      href={`/blog/${p.slug}/`}
                      variant="ghost"
                      size="sm"
                      class="w-full group-hover:bg-primary group-hover:text-primary-foreground transition-all flex items-center justify-between"
                    >
                      Read Article
                      <svg
                        class="w-4 h-4 group-hover:translate-x-1 transition-transform"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 5l7 7-7 7"
                        />
                      </svg>
                    </Button>
                  </div>
                </CardContent>
              </Card>
            ))}
          </div>

          {/* View All Button */}
          <div class="text-center mt-12">
            <Button href="/blog" variant="outline" size="lg">
              View All Articles
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </Button>
          </div>
        </div>
      </section>
    )}

    <!-- Newsletter CTA (Optional) -->
    <section class="max-w-3xl mx-auto px-6 py-24">
      <Card class="bg-linear-to-br from-primary/5 via-primary/10 to-background border-2 border-primary/20">
        <CardContent class="text-center p-12 space-y-6">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 text-primary mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold">Enjoyed this article?</h3>
          <p class="text-muted-foreground max-w-md mx-auto">
            Get notified when I publish new content. No spam, just quality articles delivered to your inbox.
          </p>
          <Button variant="primary" size="lg">
            Subscribe to Newsletter
          </Button>
        </CardContent>
      </Card>
    </section>
  </main>
</BaseLayout>
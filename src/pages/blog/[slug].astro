                  {author.data.avatar ? (
                    <Image
                      src={author.data.avatar}
                      alt={author.data.name}
                      width={64}
                      height={64}
                      class="w-16 h-16 rounded-full object-cover border-2 border-border group-hover:border-primary transition-colors"
                    />

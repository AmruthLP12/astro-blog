---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import Card from "@/components/starwind/card/Card.astro";
import CardContent from "@/components/starwind/card/CardContent.astro";
import Button from "@/components/starwind/button/Button.astro";
import { Image } from "astro:assets";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);

// Calculate reading time
const calculateReadingTime = (body: string) => {
  const wordsPerMinute = 200;
  const wordCount = body.split(/\s+/).length;
  return Math.ceil(wordCount / wordsPerMinute);
};
---

<BaseLayout title="Home">
  <main class="min-h-screen">
    {/* ================= HERO SECTION ================= */}
    <section class="relative overflow-hidden bg-linear-to-br from-background via-background to-muted/20 border-b border-border">
      {/* Decorative Elements */}
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary/5 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-primary/5 rounded-full blur-3xl"></div>
      </div>

      <div class="relative mx-auto max-w-5xl px-6 py-24 md:py-32 lg:py-40">
        <div class="text-center space-y-8">
          {/* Badge */}
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary/10 text-primary text-sm font-medium rounded-full border border-primary/20 animate-pulse">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            Personal Blog & Portfolio
          </div>

          {/* Main Heading with Gradient */}
          <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold tracking-tight">
            <span class="block bg-linear-to-br from-foreground to-foreground/60 bg-clip-text text-transparent">
              Welcome to
            </span>
            <span class="block bg-linear-to-r from-primary via-primary/80 to-primary bg-clip-text text-transparent mt-2">
              My Digital Space
            </span>
          </h1>

          {/* Description */}
          <p class="mx-auto max-w-3xl text-lg md:text-xl text-muted-foreground leading-relaxed">
            Exploring the intersection of design, development, and creativity. 
            I write about web technologies, share insights from my journey, 
            and document what I learn while building digital experiences.
          </p>

          {/* CTA Buttons */}
          <div class="flex flex-wrap justify-center gap-4 pt-8">
            <Button href="/blog" variant="primary" size="lg" class="group">
              Explore Articles
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </Button>

            <Button href="/about" variant="outline" size="lg" class="group">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              About Me
            </Button>
          </div>

          {/* Stats */}
          <div class="flex flex-wrap justify-center gap-8 pt-12">
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-primary">{posts.length}+</div>
              <div class="text-sm text-muted-foreground mt-1">Articles</div>
            </div>
            <div class="h-12 w-px bg-border"></div>
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-primary">âˆž</div>
              <div class="text-sm text-muted-foreground mt-1">Ideas</div>
            </div>
            <div class="h-12 w-px bg-border"></div>
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-primary">100%</div>
              <div class="text-sm text-muted-foreground mt-1">Passion</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="mx-auto max-w-5xl px-6 py-20">
      {/* ================= LATEST POSTS ================= */}
      {posts.length > 0 && (
        <section class="space-y-12">
          {/* Section Header */}
          <div class="flex items-center justify-between">
            <div class="space-y-2">
              <h2 class="text-3xl md:text-4xl font-bold">Latest Articles</h2>
              <p class="text-muted-foreground">Fresh thoughts and insights from my journey</p>
            </div>
            <Button href="/blog" variant="ghost" class="group hidden md:flex">
              View All
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </Button>
          </div>

          {/* Posts Grid */}
          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {posts.map((post, index) => (
              <Card class="group hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 border-2 border-transparent hover:border-primary/20 overflow-hidden">
                <CardContent class="p-0 h-full flex flex-col">
                  {/* Hero Image */}
                  {post.data.heroImageLight && (
                    <div class="relative h-48 overflow-hidden">
                      <Image
                        src={post.data.heroImageLight}
                        alt={post.data.title}
                        width={400}
                        height={250}
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300 block dark:hidden"
                      />
                      {post.data.heroImageDark && (
                        <Image
                          src={post.data.heroImageDark}
                          alt={post.data.title}
                          width={400}
                          height={250}
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300 hidden dark:block"
                        />
                      )}
                      <div class="absolute inset-0 bg-linear-to-t from-black/60 to-transparent"></div>
                      
                      {/* Post Number Badge */}
                      <div class="absolute top-3 left-3">
                        <span class="inline-flex items-center justify-center w-8 h-8 text-xs font-bold rounded-full bg-primary text-primary-foreground shadow-lg">
                          {index + 1}
                        </span>
                      </div>

                      {/* Category Badge */}
                      {post.data.category && (
                        <div class="absolute top-3 right-3">
                          <span class="inline-flex items-center px-2.5 py-1 text-xs font-medium rounded-md bg-background/90 backdrop-blur-sm text-foreground border border-border/50">
                            {post.data.category}
                          </span>
                        </div>
                      )}
                    </div>
                  )}

                  {/* Content */}
                  <div class="p-6 space-y-4 flex-1 flex flex-col">
                    <div class="space-y-3 flex-1">
                      <h3 class="text-xl font-bold leading-tight group-hover:text-primary transition-colors line-clamp-2">
                        {post.data.title}
                      </h3>

                      <p class="text-sm text-muted-foreground leading-relaxed line-clamp-3">
                        {post.data.description}
                      </p>
                    </div>

                    {/* Tags */}
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="flex flex-wrap gap-1.5">
                        {post.data.tags.slice(0, 2).map((tag) => (
                          <span class="inline-flex items-center px-2 py-0.5 text-xs rounded-md bg-muted/50 text-muted-foreground border border-border/50">
                            #{tag}
                          </span>
                        ))}
                        {post.data.tags.length > 2 && (
                          <span class="inline-flex items-center px-2 py-0.5 text-xs rounded-md bg-muted/50 text-muted-foreground border border-border/50">
                            +{post.data.tags.length - 2}
                          </span>
                        )}
                      </div>
                    )}

                    {/* Meta Info */}
                    <div class="flex items-center justify-between pt-4 border-t border-border text-xs text-muted-foreground">
                      <time class="flex items-center gap-1">
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        {post.data.pubDate.toLocaleDateString("en-US", {
                          month: "short",
                          day: "numeric",
                          year: "numeric",
                        })}
                      </time>

                      <span class="flex items-center gap-1">
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        {calculateReadingTime(post.body)} min
                      </span>
                    </div>

                    {/* CTA Button */}
                    <Button
                      href={`/blog/${post.slug}/`}
                      variant="ghost"
                      size="sm"
                      class="w-full group-hover:bg-primary group-hover:text-primary-foreground transition-all flex items-center justify-between mt-4"
                    >
                      Read Article
                      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </Button>
                  </div>
                </CardContent>
              </Card>
            ))}
          </div>

          {/* Mobile View All Button */}
          <div class="text-center md:hidden">
            <Button href="/blog" variant="outline" size="lg" class="group">
              View All Articles
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </Button>
          </div>
        </section>
      )}

      {/* ================= FEATURES SECTION ================= */}
      <section class="mt-24 space-y-12">
        <div class="text-center space-y-3">
          <h2 class="text-3xl md:text-4xl font-bold">What I Write About</h2>
          <p class="text-muted-foreground">Topics and areas I'm passionate about</p>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {/* Feature 1 */}
          <Card class="group hover:shadow-xl hover:border-primary/20 transition-all duration-300">
            <CardContent class="p-6 space-y-4">
              <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 text-primary group-hover:bg-primary group-hover:text-primary-foreground transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold">Web Development</h3>
              <p class="text-muted-foreground text-sm leading-relaxed">
                Modern web technologies, frameworks, and best practices for building exceptional digital experiences.
              </p>
            </CardContent>
          </Card>

          {/* Feature 2 */}
          <Card class="group hover:shadow-xl hover:border-primary/20 transition-all duration-300">
            <CardContent class="p-6 space-y-4">
              <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 text-primary group-hover:bg-primary group-hover:text-primary-foreground transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold">UI Design</h3>
              <p class="text-muted-foreground text-sm leading-relaxed">
                Crafting beautiful, intuitive interfaces with modern design systems and user-centered approaches.
              </p>
            </CardContent>
          </Card>

          {/* Feature 3 */}
          <Card class="group hover:shadow-xl hover:border-primary/20 transition-all duration-300">
            <CardContent class="p-6 space-y-4">
              <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 text-primary group-hover:bg-primary group-hover:text-primary-foreground transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold">Learning & Growth</h3>
              <p class="text-muted-foreground text-sm leading-relaxed">
                Documenting my journey, sharing lessons learned, and exploring new technologies and concepts.
              </p>
            </CardContent>
          </Card>
        </div>
      </section>

      {/* ================= EMPTY STATE ================= */}
      {posts.length === 0 && (
        <section class="text-center py-32 space-y-6">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-muted/50 text-muted-foreground mb-4">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          </div>
          <h2 class="text-3xl font-bold">No posts yet</h2>
          <p class="text-muted-foreground text-lg">The journey is just beginning. Check back soon for fresh content!</p>
          <Button href="/blog" variant="primary" size="lg" class="mt-6">
            Visit Blog
          </Button>
        </section>
      )}

      {/* ================= CTA SECTION ================= */}
      <section class="mt-24">
        <Card class="bg-linear-to-br from-primary/5 via-primary/10 to-background border-2 border-primary/20 overflow-hidden">
          <CardContent class="relative p-12 text-center space-y-6">
            {/* Decorative circles */}
            <div class="absolute top-0 right-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -z-10"></div>
            <div class="absolute bottom-0 left-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -z-10"></div>

            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-primary/10 text-primary mb-4">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
            </div>

            <h3 class="text-3xl md:text-4xl font-bold">Stay Updated</h3>
            <p class="text-muted-foreground text-lg max-w-2xl mx-auto">
              Want to be notified when I publish new articles? Subscribe to get the latest content delivered straight to your inbox.
            </p>

            <div class="flex flex-wrap justify-center gap-4 pt-4">
              <Button variant="primary" size="lg">
                Subscribe to Newsletter
              </Button>
              <Button href="/blog" variant="outline" size="lg">
                Browse All Posts
              </Button>
            </div>
          </CardContent>
        </Card>
      </section>
    </div>
  </main>
</BaseLayout>